@model OrderSummaryViewModel

@{
    ViewData["Title"] = "Order Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="text-center">
        <h2 class="text-success">Thank You for Your Order!</h2>
        <p class="lead">Your delicious food will be ready soon </p>
    </div>

    <div class="card my-4 shadow-sm">
        <div class="card-body">
            <h4>Order Confirmation</h4>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
        </div>
    </div>

    <h4>Order Items</h4>
    <table class="table table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Item</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>₹@item.Price</td>
                    <td>₹@(item.Quantity* item.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <h5 class="text-end">Total: ₹@Model.Items.Sum(i => i.Price * i.Quantity)</h5>

    <div class="text-center mt-4">
        <a href="/" class="btn btn-warning">Back to Home</a>
    </div>
</div>
<link rel="stylesheet" href="~/css/order-summary.css" />

